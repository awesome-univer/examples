{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react-jsx",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": false, // use eslint
      "noUnusedParameters": false, // use eslint
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true
    },
    "include": ["src", "slides", "main.tsx", "sheets-uniscript", "sheets-multi", "sheets", "docs-uniscript", "docs-multi", "docs", "data", "vite-env.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  